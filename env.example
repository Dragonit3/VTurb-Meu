# Configurações da API
PORT=80
HOST=0.0.0.0
NODE_ENV=production

# URLs dos serviços (substitua SEU_DOMINIO.COM pelo seu domínio ou IP da VPS)
API_URL=http://SEU_DOMINIO.COM/api
PLAYER_URL=http://SEU_DOMINIO.COM/player
DASHBOARD_URL=http://SEU_DOMINIO.COM/dashboard

# CORS - Origens permitidas (adicione seu domínio)
ALLOWED_ORIGINS=http://SEU_DOMINIO.COM,https://SEU_DOMINIO.COM,http://localhost:3000

# Supabase (Banco de dados)
SUPABASE_URL=sua_url_do_supabase
SUPABASE_ANON_KEY=sua_chave_anonima_do_supabase
SUPABASE_SERVICE_ROLE_KEY=sua_chave_service_role_do_supabase

# Cloudflare Stream (Hospedagem de vídeos)
CLOUDFLARE_ACCOUNT_ID=seu_account_id
CLOUDFLARE_API_TOKEN=seu_api_token

# Bunny Stream (Alternativa para hospedagem)
BUNNY_STREAM_API_KEY=sua_api_key_do_bunny
BUNNY_STREAM_LIBRARY_ID=seu_library_id
BUNNY_CDN_HOSTNAME=vz-d6fcd262-b88.b-cdn.net

# Limites de upload
MAX_FILE_SIZE=2147483648 # 2GB em bytes
MAX_VIDEO_DURATION=3000 # 50 minutos em segundos 